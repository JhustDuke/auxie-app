{
	"manifest_version": 3,
	"name": "auxie-cbt",
	"version": "1.0",
	"description": "A JAMB's portal CBTs' helper",
	"permissions": [
		"tabs",
		"activeTab",
		"storage",
		"downloads",
		"downloads.open"
	],

	"background": {
		"scripts": ["dist/background.js"],
		"service_worker": "dist/background.js",
		"type": "module"
	},

	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["dist/contentScript.js"]
		}
	],

	"action": {
		"default_popup": "dist/popup.html",
		"default_title": "CBT-HELPER",
		"default_icon": {
			"16": "dist/icons/CBT-16.png",
			"32": "dist/icons/CBT-32.png",
			"64": "dist/icons/CBT-64.png"
		}
	},

	"icons": {
		"16": "dist/icons/CBT-16.png",
		"32": "dist/icons/CBT-32.png",
		"64": "dist/icons/CBT-64.png"
	}
}
